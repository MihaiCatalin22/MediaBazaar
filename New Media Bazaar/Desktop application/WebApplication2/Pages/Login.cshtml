@page 
@model WebApplication2.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "_Layout2";
}

<body id="grad">
	<div class="container">
		<div class="row d-flex justify-content-center text-center">
			<div class="col-md-6 d-flex justify-content-center">
				<div class="panel panel-default border m-5 p-4 img-rounded shadow-lg p-3 mb-5 bg-white rounded" id="panel_login">
					<h1>@ViewData["Title"]</h1>

					<form method="post">
						<div class="form-group mt-3">
							<p style="color: red">@ViewData["Message"]</p><br />
							<label asp-for="employee.Username">Username:  </label>
							<input type="text" asp-for="employee.Username" placeholder="Type your username..." /><br />
							<span asp-validation-for="employee.Username" style="color: red"></span><br />

							<label asp-for="employee.Password" class="mt-3">Password:  </label>
							<input type="password" asp-for="employee.Password" placeholder="Type your password..." /><br />
							<span asp-validation-for="employee.Password" style="color: red"></span><br><br>
						</div>
						<button type="submit" class="btn btn-dark btn-lg">Login</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>
