@page
@model WebApplication2.Pages.VacationModel
@{
    ViewData["Title"] = "Request vacation";
}

<div class="container">
    <div class="row d-flex justify-content-center text-center">
        <div class="col-md-8 d-flex justify-content-center">
            <div class="panel panel-default border m-5 p-4 img-rounded shadow-lg p-3 mb-5 bg-white rounded" id="panel_login">
                <h1 class="mt-3">@ViewData["Title"]</h1>

                <h4 class="mt-3"> Note: All fields are required.</h4>

                <form method="post" class="mt-3 mb-2">
                    <label asp-for="@Model.StartDate" class="h5">Start date:  </label>
                    <input type="date" asp-for="@Model.StartDate" value="@Model.StartDate" class="form-control" />
                    <br />

                    <label asp-for="@Model.EndDate" class="h5">End date:  </label>
                    <input type="date" asp-for="@Model.EndDate" value="@Model.EndDate" class="form-control" />
                    <br />

                    <label asp-for="@Model.Reason" class="h5">Reason:  </label>
                    <input type="text" asp-for="@Model.Reason" class="form-control" placeholder="State your reason..." />

                    <a class="btn btn-secondary btn-lg mt-3" asp-page="/Index">Close</a>
                    <button type="submit" class="btn btn-primary btn-lg mt-3">Send</button>

                </form>

            </div>
        </div>
    </div>
</div>
